<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaosuokeji.server.dao.order.OrderItemDao">

	<insert id="save" parameterType="orderItem" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO yq_order_item(id,orderNo,product_id,quantity,price,total,remark)
		VALUES (#{id},#{orderno},#{productId},#{quantity},#{price},#{total},#{remark})
	</insert>

	<delete id="remove" parameterType="orderItem">
		DELETE FROM yq_order_item
		WHERE id=#{id}
	</delete>

	<update id="update" parameterType="orderItem">
		UPDATE yq_order_item
		<trim prefix="SET" prefixOverrides=",">
			<if test="orderno!=null">
				,orderNo=#{orderno}
			</if>
			<if test="productId!=null">
				,product_id=#{productId}
			</if>
			<if test="quantity!=null">
				,quantity=#{quantity}
			</if>
			<if test="price!=null">
				,price=#{price}
			</if>
			<if test="total!=null">
				,total=#{total}
			</if>
			<if test="remark!=null">
				,remark=#{remark}
			</if>
			,update_time=NOW()
		</trim>
		WHERE id=#{id}
	</update>

	<select id="get" parameterType="orderItem" resultType="orderItem">
		SELECT *
		FROM yq_order_item
		WHERE id=#{id}
	</select>

	<sql id="listCondition">
		FROM yq_order_item
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="id!=null">
				AND id=#{id}
			</if>
			<if test="orderno!=null and orderno!=''">
				AND orderNo=#{orderno}
			</if>
			<if test="dynamic!=null and dynamic.orderno!=null and dynamic.orderno!=''">
				AND orderNo LIKE CONCAT('%',#{dynamic.orderno},'%')
			</if>
			<if test="productId!=null">
				AND product_id=#{productId}
			</if>
			<if test="quantity!=null">
				AND quantity=#{quantity}
			</if>
			<if test="price!=null">
				AND price=#{price}
			</if>
			<if test="total!=null">
				AND total=#{total}
			</if>
		</trim>
	</sql>

	<select id="list" parameterType="orderItem" resultType="orderItem">
		SELECT *
		<include refid="listCondition"/>
		<include refid="XSBaseMapper.sort"/>
		<include refid="XSBaseMapper.limit"/>
	</select>

	<select id="count" parameterType="orderItem" resultType="long">
		SELECT COUNT(*)
		<include refid="listCondition"/>
	</select>
</mapper>