<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaosuokeji.server.dao.order.OrderDao">

	<insert id="save" parameterType="order" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO yq_order(id,orderNo,merchant_id,amount,status,delivery_date,creator)
		VALUES (#{id},#{orderno},#{merchantId},#{amount},#{status},#{deliveryDate},#{creator})
	</insert>

	<delete id="remove" parameterType="order">
		DELETE FROM yq_order
		WHERE id=#{id}
	</delete>

	<update id="update" parameterType="order">
		UPDATE yq_order
		<trim prefix="SET" prefixOverrides=",">
			<if test="orderno!=null">
				,orderNo=#{orderno}
			</if>
			<if test="merchantId!=null">
				,merchant_id=#{merchantId}
			</if>
			<if test="amount!=null">
				,amount=#{amount}
			</if>
			<if test="status!=null">
				,status=#{status}
			</if>
			<if test="deliveryDate!=null">
				,delivery_date=#{deliveryDate}
			</if>
			<if test="creator!=null">
				,creator=#{creator}
			</if>
			,update_time=NOW()
		</trim>
		WHERE id=#{id}
	</update>

	<select id="get" parameterType="order" resultType="order">
		SELECT *
		FROM yq_order
		WHERE id=#{id}
	</select>

	<sql id="listCondition">
		FROM yq_order
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="id!=null">
				AND id=#{id}
			</if>
			<if test="orderno!=null and orderno!=''">
				AND orderNo=#{orderno}
			</if>
			<if test="dynamic!=null and dynamic.orderno!=null and dynamic.orderno!=''">
				AND orderNo LIKE CONCAT('%',#{dynamic.orderno},'%')
			</if>
			<if test="merchantId!=null">
				AND merchant_id=#{merchantId}
			</if>
			<if test="amount!=null">
				AND amount=#{amount}
			</if>
			<if test="status!=null">
				AND status=#{status}
			</if>
			<if test="dynamic!=null and dynamic.deliveryDateBegin!=null and dynamic.deliveryDateBegin!=''">
				AND DATE(delivery_date) &gt;= #{dynamic.deliveryDateBegin}
			</if>
			<if test="dynamic!=null and dynamic.deliveryDateEnd!=null and dynamic.deliveryDateEnd!=''">
				AND DATE(delivery_date) &lt;= #{dynamic.deliveryDateBegin}
			</if>
			<if test="creator!=null and creator!=''">
				AND creator=#{creator}
			</if>
			<if test="dynamic!=null and dynamic.creator!=null and dynamic.creator!=''">
				AND creator LIKE CONCAT('%',#{dynamic.creator},'%')
			</if>
		</trim>
	</sql>

	<select id="list" parameterType="order" resultType="order">
		SELECT *
		<include refid="listCondition"/>
		<include refid="XSBaseMapper.sort"/>
		<include refid="XSBaseMapper.limit"/>
	</select>

	<select id="count" parameterType="order" resultType="long">
		SELECT COUNT(*)
		<include refid="listCondition"/>
	</select>
</mapper>