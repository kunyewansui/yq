<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaosuokeji.server.dao.image.ImageDao">

    <insert id="save" parameterType="image">
        INSERT INTO shuttle_common.sc_image(id,`name`,url,link,category_id,seq,display)
        VALUES (#{id},#{name},#{url},#{link},#{category.id},#{seq},#{display})
    </insert>

    <delete id="remove" parameterType="image">
        DELETE FROM shuttle_common.sc_image
        WHERE id=#{id}
    </delete>

    <update id="update" parameterType="image">
        UPDATE shuttle_common.sc_image
        <trim prefix="SET" prefixOverrides=",">
            <if test="name!=null">
                ,`name`=#{name}
            </if>
            <if test="url!=null">
                ,url=#{url}
            </if>
            <if test="link!=null">
                ,link=#{link}
            </if>
            <if test="parent!=null">
                ,pid=#{parent.id}
            </if>
            <if test="seq!=null">
                ,seq=#{seq}
            </if>
            <if test="display!=null">
                ,display=#{display}
            </if>
            ,update_time=NOW()
        </trim>
        WHERE id=#{id}
    </update>

    <update id="batchUpdate" parameterType="image">
        UPDATE shuttle_common.sc_image
        <trim prefix="SET" prefixOverrides=",">
            <if test="display!=null">
                ,display=#{display}
            </if>
            ,update_time=NOW()
        </trim>
        <if test="list!=null and list.size>0">
            WHERE id IN
            <foreach collection="list" open="(" item="item" close=")" separator=",">
                #{item.id}
            </foreach>
        </if>
    </update>

    <update id="batchUpdateLock" parameterType="image">
        UPDATE shuttle_common.sc_image
        SET `lock`=#{lock},update_time=NOW()
        <if test="list!=null and list.size>0">
            WHERE id IN
            <foreach collection="list" open="(" item="item" close=")" separator=",">
                #{item.id}
            </foreach>
        </if>
    </update>

    <resultMap id="imageMap" type="image" autoMapping="true">
        <association property="parent" javaType="image" autoMapping="true" columnPrefix="p_" />
    </resultMap>

    <select id="get" parameterType="image" resultMap="imageMap">
        SELECT c.*,
        p.id AS p_id,p.name AS p_name
        FROM shuttle_common.sc_image c
        LEFT JOIN shuttle_common.sc_image p ON c.pid=p.id
        WHERE c.id=#{id}
    </select>

    <sql id="listCondition">
        FROM shuttle_common.sc_image c
        LEFT JOIN shuttle_common.sc_image p ON c.pid=p.id
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="key!=null">
                AND c.key=#{key}
            </if>
            <if test="parent!=null">
                AND c.pid=#{parent.id}
            </if>
        </trim>
    </sql>

    <select id="list" parameterType="image" resultMap="imageMap">
        SELECT c.*,
        p.id AS p_id,p.name AS p_name
        <include refid="listCondition" />
    </select>

    <select id="listCombo" parameterType="image" resultMap="imageMap">
        SELECT id,`name`,pid AS p_id
        FROM shuttle_common.sc_image
        <include refid="XSBaseMapper.sort" />
    </select>

    <select id="count" parameterType="image" resultType="long">
        SELECT COUNT(*)
        <include refid="listCondition" />
    </select>
</mapper>